<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="SimpleFormDisplay480_12120"
			editable="false"
			layout="ResponsiveGridLayout"
			title="Product Details"
			labelSpanXL="4"
			labelSpanL="4"
			labelSpanM="12"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="2"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
				<Label text="Product Category" />
				<Text text="{Category}"/>
				<Label text="Supplier ID" />
				<Text text="{SupplierId}"/>
				<Label text="Product Name" />
				<Text text="{Name}"/>
				<Label text="Product Description" />
				<Text text="{Description}"/>
				<Label text="Price" />
				<Text text="{Price} {Currency}"/>
				<Label text="Unit Of Measure" />
				<Text text="{Uom}"/>
				<Label text="Weight" />
				<Text text="{Weight} {WeightUnit}"/>
			</f:content>
		</f:SimpleForm>
		<f:SimpleForm id="SimpleFormDisplay480_12120-2"
			editable="false"
			layout="ResponsiveGridLayout"
			title="Dimensions"
			labelSpanXL="4"
			labelSpanL="4"
			labelSpanM="12"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="2"
			columnsM="1"
			singleContainerFullSize="false">
			<f:content>
				<Label text="Width" />
				<Text text="{Width}"/>
				<Label text="Depth" />
				<Text text="{Depth}"/>
				<Label text="Height" />
				<Text text="{Height}"/>
				<Label text="Unit"  />
				<Text text="{DimUnit}"/>
			</f:content>
		</f:SimpleForm>
	</VBox>
</core:FragmentDefinition>